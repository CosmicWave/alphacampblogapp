<table>

	<thead>
		<th>Title</th>
		<th>Author</th>
		<th>Created At</th>
	</thead>

	<tbody>

	  <% @posts.each do |post|	%>

		 <tr>
			<td>	
				<%= post.title	%>
			</td>
			<td>	
				<%= post.author %>
			</td>
			<td>	
				<%= post.content %>
			</td>
			<td>	
				<%= post.created_at %>
			</td>
			<td>	
				<%= link_to 'View', post_path(id: post.id) %>
			</td>
		 </tr>
		<% end	%>	

		</tr>

	</tbody>
</table>

<%= link_to 'Create New Post', new_post_path %>